<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Barter Trading</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navigation -->
    <%- include('partials/navbar') %>

    <!-- Flash Messages -->
    <%- include('partials/messages') %>

    <div class="container">
        <div class="row">
            <div class="col s12">
                <h4>Welcome, <%= user.firstName %>!</h4>
                <p>This is your dashboard. Here you can manage your items and trades.</p>
            </div>
        </div>

        <div class="row">
            <!-- Quick Actions -->
            <div class="col s12 m6">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Quick Actions</span>
                        <div class="collection">
                            <a href="/items/create" class="collection-item">
                                <i class="material-icons left">add</i>
                                List New Item
                            </a>
                            <a href="/items" class="collection-item">
                                <i class="material-icons left">search</i>
                                Browse Items
                            </a>
                            <a href="/trades" class="collection-item">
                                <i class="material-icons left">swap_horiz</i>
                                View My Trades
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="col s12 m6">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">Recent Activity</span>
                        <% if (locals.recentActivity && recentActivity.length > 0) { %>
                            <ul class="collection">
                                <% recentActivity.forEach(activity => { %>
                                    <li class="collection-item">
                                        <span class="title"><%= activity.title %></span>
                                        <p><%= activity.description %></p>
                                        <small class="grey-text"><%= activity.timestamp %></small>
                                    </li>
                                <% }); %>
                            </ul>
                        <% } else { %>
                            <p>No recent activity to show.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.sidenav').sidenav();
            $('.dropdown-trigger').dropdown();
        });
    </script>
</body>
</html> 