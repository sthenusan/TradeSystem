<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - Barter Trading System</title>
    <!-- Materialize CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- Navigation -->
    <%- include('../partials/navbar') %>

        <!-- Flash Messages -->
        <%- include('../partials/messages') %>

            <main style="padding: 0;">
                <!-- Reset Password Section -->
                <section id="reset-password"
                    style="padding: 40px 0; display: flex; justify-content: center; align-items: center;">
                    <div style="max-width: 480px; width: 100%; padding: 40px;">
                        <div style="text-align: center; margin-bottom: 20px;">
                            <h2 style="font-size: 24px; font-weight: 600; margin-bottom: 8px;">Reset Password</h2>
                            <p style="color: #666; margin-bottom: 32px;">Enter your new password</p>
                        </div>

                        <form action="/users/reset-password/<%= token %>" method="POST"
                            style="display: flex; flex-direction: column; gap: 24px;">
                            <input type="hidden" name="token" value="<%= token %>">
                            <div style="display: flex; flex-direction: column; gap: 8px;">
                                <label style="display: flex; gap: 4px; font-weight: 500;">
                                    New Password
                                    <span style="color: #dc3545;">*</span>
                                </label>
                                <div style="position: relative;">
                                    <input type="password" name="password" id="password" placeholder="••••••••" required
                                        style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px; font-size: 16px;" />
                                    <i class="material-icons"
                                        style="position: absolute; right: 12px; top: 50%; transform: translateY(-50%); cursor: pointer; color: #666;"
                                        onclick="togglePassword('password')">visibility_off</i>
                                </div>
                                <small style="color: #666;">Password must be at least 8 characters long and include
                                    uppercase, lowercase, number, and special character</small>
                            </div>

                            <div style="display: flex; flex-direction: column; gap: 8px;">
                                <label style="display: flex; gap: 4px; font-weight: 500;">
                                    Confirm New Password
                                    <span style="color: #dc3545;">*</span>
                                </label>
                                <div style="position: relative;">
                                    <input type="password" name="confirmPassword" id="confirmPassword"
                                        placeholder="••••••••" required
                                        style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px; font-size: 16px;" />
                                    <i class="material-icons"
                                        style="position: absolute; right: 12px; top: 50%; transform: translateY(-50%); cursor: pointer; color: #666;"
                                        onclick="togglePassword('confirmPassword')">visibility_off</i>
                                </div>
                            </div>

                            <button type="submit" style="width: 100%; background-color: #4CAF50; color: white; padding: 12px; 
                        border: none; border-radius: 6px; font-size: 16px; font-weight: 500; margin-top: 8px;
                        cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 8px;">
                                <i class="material-icons" style="font-size: 20px;">lock_reset</i>
                                Reset Password
                            </button>

                            <div style="text-align: center; margin-top: 16px;">
                                <a href="/users/login" style="color: #4CAF50; text-decoration: none; font-weight: 500;">
                                    Back to Login
                                </a>
                            </div>
                        </form>
                    </div>
                </section>
            </main>

            <!-- Footer -->
            <%- include('../partials/footer') %>

                <!-- Materialize JS -->
                <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
                <!-- Custom JS -->
                <script src="/js/main.js"></script>

                <script>
                    function togglePassword(inputId) {
                        const input = document.getElementById(inputId);
                        const icon = input.nextElementSibling;

                        if (input.type === 'password') {
                            input.type = 'text';
                            icon.textContent = 'visibility';
                        } else {
                            input.type = 'password';
                            icon.textContent = 'visibility_off';
                        }
                    }
                </script>
</body>

</html>